@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container">
    <h1 class="text-danger">@ViewLocalizer["Error"]</h1>
    <h2 class="text-danger">@ViewLocalizer["An error occurred while processing your request."]</h2>
    
    @if (Model.ShowRequestId)
    {
        <p>
            <strong>@ViewLocalizer["Request ID:"]</strong> <code>@Model.RequestId</code>
        </p>
    }
</div>
