@using Microsoft.AspNetCore.Identity
@using Collections.Infrastructure.Identity.Models
@using Collections.Web.Interfaces

@inject SignInManager<ApplicationUser> SignInManager
@inject ICurrentUserProvider CurrentUser

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <i class="bi bi-person-fill"></i>
        @CurrentUser.FullName
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0"><i class="bi bi-box-arrow-right"></i></button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login"><i class="bi bi-box-arrow-in-left"></i></a>
    </li>
}
</ul>
