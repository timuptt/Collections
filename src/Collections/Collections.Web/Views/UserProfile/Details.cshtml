@using Collections.ApplicationCore.Models
@using Collections.Web.Interfaces
@model Collections.Web.Models.UserProfile.UserProfileViewModel
@inject ICurrentUserProvider crrentUser

<!DOCTYPE html>

<html>
<head>
    <title>Details</title>
</head>
<body>
<div class="container">
    <h1>
        @Model.FirstName @Model.LastName
    </h1>
    <hr/>
    <h3>Collections</h3>
    @if (crrentUser.HasPermissions(@Model.Id))
    {
        if (crrentUser.IsAdmin)
        {
            <a type="button" class="btn btn-primary" asp-controller="Collections" asp-action="Create" asp-route-profileId="@Model.Id">Create collection as @Model.FirstName @Model.LastName</a>
        }
        else
        {
            <a type="button" class="btn btn-primary" asp-controller="Collections" asp-action="Create">Create collection</a>
        }
    }
    <hr/>
    @using (Html.BeginForm())
    {
        <p>Search by title:</p>
        @Html.TextBox("searchTerm")
        <input type="submit" class="btn btn-sm-secondary" value="Search"/>
    }
    @if (@Model.UserCollections.Count > 0)
    {
        var previousDisabled = !Model.UserCollections.PreviousPage ? "disabled" : "";
        var nextDisabled = !Model.UserCollections.NextPage ? "disabled" : "";
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <td>
                        @Html.ActionLink(nameof(UserCollection.Id), "Details", new {sortProp = nameof(UserCollection.Id)}, new{ @class = "text-decoration-none" })
                    </td>
                    <td>
                        @Html.ActionLink(nameof(UserCollection.Title), "Details", new {sortProp = nameof(UserCollection.Title)}, new{ @class = "text-decoration-none" })
                    </td>
                    <td>
                        @Html.ActionLink(nameof(UserCollection.Description), "Details", new {sortProp = nameof(UserCollection.Description)}, new{ @class = "text-decoration-none" })
                    </td>
                    <td>
                        @Html.ActionLink("Items Count", "Details", new {sortProp = "ItemsCount"}, new{ @class = "text-decoration-none" })
                    </td>
                </tr>
                </thead>
                <tbody>
                @foreach (var collection in @Model.UserCollections)
                {
                    <tr>
                        <td>
                            @collection.Id
                        </td>
                        <td>
                            <a asp-action="Details" asp-controller="Collections" asp-route-id="@collection.Id">@collection.Title</a>
                        </td>
                        <td>
                            @collection.Description
                        </td>
                        <td>
                            @collection.ItemsCount
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
        <nav class="">
            <ul class="pagination">
                <li class="page-item @previousDisabled"><a class="page-link " asp-action="Details" asp-route-pageNumber="@Model.UserCollections.PageIndex - 1">Previous</a></li>
                @for (var i = 1; i <= @Model.UserCollections.TotalPages; i++)
                {

                    if (@Model.UserCollections.PageIndex == i)
                    {
                        <li class="page-item active"><a class="page-link" asp-action="Details" asp-route-pageNumber="@i">@i</a></li>
                    }
                    else
                    {
                        <li class="page-item"><a class="page-link active" asp-action="Details" asp-route-pageNumber="@i">@i</a></li>
                    }
                }
                <li class="page-item @nextDisabled"><a class="page-link" asp-action="Details" asp-route-pageNumber="@Model.UserCollections.PageIndex + 1">Next</a></li>
            </ul>
        </nav>
    }
</div>
</body>
</html>