@using Collections.ApplicationCore.Models
@model Collections.Web.Models.UserProfile.UserProfileViewModel

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
</head>
<body>
<div class="container">
    <h1>
        @Model.FirstName @Model.LastName
    </h1>
    <hr/>
    @if (@Model.UserCollections.Count > 0)
    {
        <h3>Collections</h3>
        <hr/>
        var previousDisabled = !Model.UserCollections.PreviousPage ? "disabled" : "";
        var nextDisabled = !Model.UserCollections.NextPage ? "disabled" : "";
        <nav class="">
            <ul class="pagination">
                <li class="page-item @previousDisabled"><a class="page-link " asp-action="Profile" asp-route-pageNumber="@Model.UserCollections.PageIndex - 1">Previous</a></li>
                @for (var i = 1; i <= @Model.UserCollections.TotalPages; i++)
                {

                    if (@Model.UserCollections.PageIndex == i)
                    {
                        <li class="page-item active"><a class="page-link" asp-action="Profile" asp-route-pageNumber="@i">@i</a></li>
                    }
                    else
                    {
                        <li class="page-item"><a class="page-link active" asp-action="Profile" asp-route-pageNumber="@i">@i</a></li>
                    }
                }
                <li class="page-item @nextDisabled"><a class="page-link" asp-action="Profile" asp-route-pageNumber="@Model.UserCollections.PageIndex + 1">Next</a></li>
            </ul>
        </nav>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <td>
                        @Html.DisplayNameFor(m => m.UserCollections[0].Id)
                    </td>
                    <td>
                        @Html.DisplayNameFor(m => m.UserCollections[0].Title)
                    </td>
                    <td>
                        @Html.DisplayNameFor(m => m.UserCollections[0].Description)
                    </td>
                    <td>
                        @Html.DisplayNameFor(m => m.UserCollections[0].ItemsCount)
                    </td>
                </tr>
                </thead>
                <tbody>
                @foreach (var collection in @Model.UserCollections)
                    {
                        <tr>
                            <td>
                                @collection.Id
                            </td>
                            <td>
                                <a asp-action="Details" asp-controller="Collections" asp-route-id="@collection.Id">@collection.Title</a>
                            </td>
                            <td>
                                @collection.Description
                            </td>
                            <td>
                                @collection.ItemsCount
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            
           
        </div>
    }
</div>
</body>
</html>